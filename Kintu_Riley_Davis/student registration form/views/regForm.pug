doctype html
head
  title LogIn
  // Required meta tags
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  // Bootstrap CSS v5.2.1
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT' crossorigin='anonymous')
  link(rel='stylesheet' href='')
header
  // place navbar here
main
  .container
    .row.justify-content-center.align-items-center
      .col-lg-4(style='text-align: center; margin: 50px')
        form(action='/srg' name='register' enctype='multipart/form-data' method='POST')
          h1 Student Registration Form
          .row.justify-content-center.align-items-center.g-2
            .col-lg-6.form-fields
              label(for='')
                | Surname *
              input(type='text' name='surName')
              small#surNameerr
            .col-lg-6.form-fields
              label(for='')
                | Given name *
              input(type='text' name='givenName')
              small#giveNameerr
            .col-lg-6
              label(for='') Upload photo
              input(id='' name='image' type='file')
              small#image
            .col-lg-6.form-fields
              label(for='')
                | Title
                select.form-select(name='title')
                  option
                  option Mr.
                  option Mrs.
                  option Miss
                  option Dr.
                  option Prof.
                  option Eng.
                small#title
            .col-lg-6.form-fields
              label(for='')
                | Gender *
                .form-check.form-check-inline
                  input#gender1.form-check-input(type='radio' name='gender1' value='option1')
                  label.form-check-label(for='gender1') Male
                  small#gender1err
                .form-check.form-check-inline
                  input#gender2.form-check-input(type='radio' name='gender2' value='option2')
                  label.form-check-label(for='gender2') Female
                  small#gender2err
            .col-lg-6
              label(for='') Date of Birth:
              input#dob.input(type='date' name='dob')
              small#doberr
            .col-lg-6.form-fields
              label(for='')
                | Country *
                select.form-select(name='country')
                  option
                  option Uganda
                  option Kenya
                  option Tanzania
                  option Rwanda
                  option Burundi
                small#countryerr
            .col-lg-6.form-fields
              label(for='')
                | Place of Residence *
              input(type='text' name='residence')
              small#residenceerr
            .col-lg-6.form-fields
              label(for='')
                | Nationality *
              input(type='text' name='nationality')
              small#nationalityerr
            .col-lg-12.button
              button.btn.btn-primary(type='submit') Register

