doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Student Registration Form
  // CSS only
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous')
  style.
    #h_bck{
    background-color: purple;
    color: white;
    text-align: center;
    margin: 10px 10px 10px 10px;
    margin-bottom: 20px;
    }
    .main_container{
    margin-top: 60px;
    margin-bottom: 60px;
    }
    .form-control{
    border: 1px solid purple;
    border-radius: 0;
    }
    .form-select{
    border: 1px solid purple;
    border-radius: 0;
    }
.container.main_container(style='border: 1px solid purple; width: 800px;')
      #h_bck
        h1 Student Registration Form
      form.needs-validation(action='/', method='post' novalidate)  
        .row
          .col-lg-6
            h5.text
              | Sur name 
              span(style='color: red;') *
            .input-group.mb-3
              input.form-control(type='text' placeholder='Enter Surname' name='surname' required)
              .invalid-feedback
                | Invalid Field!             
            h5.text
              | Given name 
              span(style='color: red;') *
            .input-group.mb-3
              input.form-control(type='text' placeholder='Enter Given name' name='given_name' required)
              .invalid-feedback
                | Invalid Field! 
            h5.text
              | Title 
              span(style='color: red;') *
            select.form-select(aria-label='Default select example' name='title' required)
              option(selected='') Select Title
              option(value='Mr') Mr
              option(value='Ms') Mrs
              .invalid-feedback
                | Invalid Field!  
          .col-lg-6
            .mb-3
              label.form-label(for='formFile') Upload Photo
              input#formFile.form-control(type='file' name='photo' required)
              .invalid-feedback
                | Invalid Field!  
        .col-lg-12
          h5.text
            | Gender
            span(style='color: red;') *
          .col-lg-12(style='border: 1px solid purple;')
            .d-inline-flex
              .form-check
                input#flexRadioDefault1.form-check-input(type='radio' name='gender' )
                label.form-check-label(for='flexRadioDefault1')
                  | Male
              .invalid-feedback
                | Invalid Field!  
              .form-check(style='margin-left: 100px;')
                input#flexRadioDefault2.form-check-input(type='radio' name='gender' checked='' )
                label.form-check-label(for='flexRadioDefault2')
                  | Female
              .invalid-feedback
                | Invalid Field!  
        .mt-3
          .row
            .col-lg-6.mt-3
              h5.text
                | Date
                span(style='color: red;') *
              input.form-control(type='Date' name='date' required)
              .invalid-feedback
                | Invalid Field!  
            .col-lg-6.mt-3
              h5.text
                | Country
                span(style='color: red;') *
              select.form-select(aria-label='Default select example' name='country' required)
                option(selected='') Select Country
                option(value='Uganda') Uganda
                option(value='Kenya') Kenya
                option(value='Tanzania') Tanzania
              .invalid-feedback
                | Invalid Field!  
          .col-lg-12.mt-4
            h5.text
              | Place of Residence
              span(style='color: red;') *
            .input-group.mb-3
              input.form-control(type='text' placeholder='Enter Place of Residence' name='residence' required)
              .invalid-feedback
                | Invalid Field!  
          .col-lg-12.mt-4
            h5.text
              | Nationality
              span(style='color: red;') *
            .input-group.mb-3
              input.form-control(type='text' placeholder='Enter Nationality' name='nationality' required)
              .invalid-feedback
                | Invalid Field!             
        button(type="submit" style='background-color:purple; color:white; border-radius:10px; border:none; width:90px; margin-left:680px; margin-bottom:30px') Register 



