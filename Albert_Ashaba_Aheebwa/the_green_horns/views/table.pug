doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Virus Test List
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous')
header
    nav.navbar.navbar-expand-lg.bg-light
        .container-fluid
            a.navbar-brand(href='#') Navbar
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarNav.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(aria-current='page' href='/') Reg Form
                    li.nav-item
                        a.nav-link.active(href='/table') Registered Students
main
    .row.mt-5
        .col
        .col-9
            table.table
                thead
                    tr
                        th(scope='col') #
                        th(scope='col') Full name
                        th(scope='col') Gender
                        th(scope='col') DOB (d/m/y)
                        th(scope='col') Nationality
                        th(scope='col') Country
                tbody
                    if students.length>0
                        each student,index in students
                            tr
                                th(scope='row') #{index +1}
                                td #{student.surname + ' ' + student.givenname}
                                td #{student.gender}
                                - let yearobj=student.dob
                                - let dob=(yearobj.getDate()+"/"+yearobj.getMonth()+"/"+yearobj.getFullYear())
                                td #{dob}
                                td #{student.nationality}
                                td #{student.country}
                    else 
                        tr 
                            th.text-center.text-danger(colspan="6") Database Empty ðŸ˜’
        .col
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4' crossorigin='anonymous')
