doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Registration
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="styles.css")
    body 
        .allform
            h4 Student Registration Form
            form(action="/register" methode="POST" onsubmit="return ValidatInputs(event);") 
                .container 
                    .row 
                        .col.mb-4
                            #error1.form-lable
                            lable.form-outline Surname
                            input#surname.surnam(type="text" name="surname")
                            small.error
                    .row 
                        .col.mb-4
                            #error2.form-lable
                            lable.form-outline Given Name
                            input#givenname.givennam(type="text" name="givenname")
                            small.error
                    .row 
                        .col.mb-4
                            #error3.form-lable
                            lable.form-outline Title
                            select#title(name="title") 
                                option(value="Mrs") Mrs
                                option(value="Mr") Mr
                                option(value="Miss") Miss
                                option(value="Dr") Dr 
                                option(value="Prof")  Prof
                                option(value="Eng") Eng
                            small.error
                            
                    .row 
                        .col.mb4
                            label(for="") Gender
                            .form-check#error4
                                input#gender.form-check-input(type='checkbox' value='male' name="gender")
                                label.form-check-label
                                    | Male
                                .form-check
                                input#flexCheckChecked.form-check-input(type='checkbox' value='female' name="gender")
                                label.form-check-label
                                    | Female
                            small.error

                    .row 
                        .col.mb-4 
                            #error5.form-lable
                            lable.form-outline Date of Birth
                            input#dateofbirth(type="date" name="dateofbirth")
                            small.error
                        .col.mb-4
                            #error6.form-lable
                            lable.form-outline Country
                            select#country(name="country") 
                                option(value="Uganda") Uganda
                                option(value="Kenya") Kenya
                                option(value="Rwanda") Rwanda
                                option(value="Tanzania") Tanzania
                                option(value="Burundi")  Burundi  
                            small.error
                    .row 
                        .col.mb-4
                            #error7.form-lable
                            lable.form-outline place of residence
                            input#residence(type="text" name="residence")
                            small.error 
                    .row 
                        .col.mb-4 
                            #error8.form-lable
                            lable.form-outline Nationality
                            input#nationality(type="text" name="nationality")
                            small.error 
                    .row 
                        .col 
                            button.btn-1(type="submit") Register
                    

                

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")
    script('script.js')