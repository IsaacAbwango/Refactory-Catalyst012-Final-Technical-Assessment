doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Refactory Student Registration
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous")
  body
    .container.mt-5
      .mx-auto.border.border-dark.p-4
        h2.bg-primary.text-bg-primary.p-2.mb-3 Student Registration Form
        form(action="" enctype="multipart/form-data") 
          .row
            .col-12.col-lg-9
              div.mb-2
                label.form-label(for="surName")
                  h4.fw-bold.m-1
                    span.text-primary Sur Name
                    span.text-danger *
                input#surName.form-control.rounded-0.border.border-danger.border-2(type="text" name="surName" placeholder="Enter Surname")
                #surName-error.fs-5.text-danger.px-3 Invalid Field!
              div.mb-2
                label.form-label(for="givenName")
                  h4.fw-bold.m-1
                    span.text-primary Given Name
                    span.text-danger *
                input#givenName.form-control.rounded-0.border.border-danger.border-2(type="text" name="givenName" placeholder="Enter Given Name")
                #givenName-error.fs-5.text-danger.px-3 Invalid Field!
              div.mb-2
                label.form-label(for="title")
                  h4.fw-bold.m-1
                      span.text-primary Title
                      span.text-danger *
                select#title.form-select.rounded-0.border.border-danger.border-2(name="title")
                  option(value="" disabled selected) -- Select Title -- 
                  option(value="Mr.") Mr.
                  option(value="Mrs.") Mrs.
                  option(value="Miss.") Miss.
                  option(value="Dr.") Dr.
                  option(value="Prof.") Prof.
                  option(value="Eng.") Eng.
            .col-12.col-lg-3
          div.mb-2
              h4.fw-bold.m-1
                span.text-primary Gender
                span.text-danger *
              .d-flex.align-items-center.gap-5.border.border-2
                .form-check
                  input#male.form-check-input(type='radio' name='gender' value="Male")
                  label.form-check-label.fs-4(for='male')
                    | Male
                .form-check
                  input#female.form-check-input(type='radio' name='gender' value="Female")
                  label.form-check-label.fs-4(for='female')
                    | Female
              #gender-error.fs-5.text-danger.px-3 Invalid Field!
          .row
            .col-12.col-lg-5
              div
                label.form-label(for="date-of-birth")
                  h4.fw-bold.m-1
                    span.text-primary Date of Birth
                    span.text-danger *
                input#date-of-birth.form-control.rounded-0.border.border-danger.border-2(type="date" name="date-of-birth" placeholder="Date of Birth")
                #date-of-birth-error.fs-6.text-danger
            .col-12.col-lg-5
              div
                label.form-label(for="country")
                  h4.fw-bold.m-1
                      span.text-primary Country
                      span.text-danger *
                select#country.form-select.rounded-0.border.border-danger.border-2(name="country")
                  option(value="" disabled selected) -- Select Country -- 
                  option(value="Uganda") Uganda
                  option(value="Kenya") Kenya
                  option(value="Tanzania") Tanzania
                  option(value="Rwanda") Rwanda
                  option(value="Burundi") Burundi
                #country-error.fs-6.text-danger
          div.mb-2
              label.form-label(for="placeOfResidence")
                h4.fw-bold.m-1
                  span.text-primary Place of Residence
                  span.text-danger *
              input#placeOfResidence.form-control.rounded-0.border.border-danger.border-2(type="text" name="placeOfResidence" placeholder="Enter Place of Residence")
              #placeOfResidence-error.fs-5.text-danger.px-3 Invalid Field!
          div.mb-2
              label.form-label(for="nationality")
                h4.fw-bold.m-1
                  span.text-primary Nationality
                  span.text-danger *
              input#nationality.form-control.rounded-0.border.border-danger.border-2(type="text" name="nationality" placeholder="Enter Nationality")
              #nationality-error.fs-5.text-danger.px-3 Invalid Field!
          div.mb-2.text-end
            button.btn.btn-sm.btn-primary.px-4.fs-5.fw-bold(type="submit") Register
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous") 